<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>MY APP</title>
  
</head>
<script src="main.js"></script>
<style>
    tr {
      border: 1px;
      text-align: center
    }
    th {
      border: 1px;
    }
    table{
      border-style: groove;
      border-radius: 10px
    }
  </style>
<body style="text-align: center">
  <h1>May Node and Express be with you.</h1><br>
  <div  style=" text-align: center; position: inherit; margin: auto; width: 80%">
      <table >
        <tr>
          <th>No.</th>
          <th>Authors</th>
          <th>Quotes</th>
          <th>Action</th>
        </tr>
        <% for(var i=0; i<quotes.length; i++) {%>
          <tr>
            <td>
              <%=i+1%>
            </td>
            <td><span id="name<%= i %>" style="color: darkgreen"><%= quotes[i].name %></span></td>
            <td><span id="quote<%= i %>" style="color: black"><%= quotes[i].quote %></td>
            <td><button onclick="editSQuote('<%=i%>')" >  Edit</button></td>
            <td><button onclick="deleteSQuote('<%=i%>')" >  Delete</button></td>
        </tr>
      <% } %>
    </table>
  </div>

  <form action="/quotes" method="POST" style="margin-top: 1%">
      <input type="text" placeholder="Author" name="name" id="author" style="width: 30%">
      <input type="text" placeholder="Quote" name="quote" id="quoteOfAuthor" style="width: 30%">
      <button type="submit">Submit</button>
  </form>

</body>

</html>